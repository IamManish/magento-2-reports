$chartData = $block->getChartData();
$store     = $this->getRequest()->getParam('store');
?>
<div class="dashboard-item-container">
    <div class="title-content">
        <?php if ($block->canShowTitle()) : ?>
            <div class="dashboard-item-title"><?php echo $block->getTitle(); ?></div>
        <?php endif; ?>
        <?php if($block->canShowDetail()) : ?>
            <div class="view-detail"><a href="<?php echo $block->getDetailUrl() ?>"><?php echo __('View Detail') ?></a></div>
        <?php endif; ?>
        <div class="line-2">
            <div class="number"><?php echo $chartData['total'] ?></div>
            <?php if ($block->isCompare()) : ?>
                <div class="chart-rate <?php echo $chartData['rate'] > 0 ? 'up-rate' : ($chartData['rate'] < 0 ? 'down-rate' : '') ?>">
                    <?php echo abs($chartData['rate']) . '%' ?>
                </div>
            <?php endif; ?>
        </div>
    </div>

    <div class="dashboard-item-content-chart">
        <?php if ($block->isEnabledChart()) : ?>
            <canvas id="<?php echo $chartData['name'] ?>-chart"
                    data-mage-init='{"initChart":{"chartData":<?php echo \Mageplaza\Reports\Helper\Data::jsonEncode($chartData) ?>}}'></canvas>
        <?php else: ?>
            <div class="ar-empty-text empty-text">
                <?php echo __("Chart is disabled. To enable the chart, click <a href='%1'>here</a>", $block->getUrl('adminhtml/system_config/edit', ['section' => 'mageplaza_reports', 'store' => $store])) ?>
            </div>
        <?php endif; ?>
    </div>

</div>
